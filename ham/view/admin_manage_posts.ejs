<% include inc/admin_header.html %>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div>
                    <h2>管理文章<a href="/admin/write_post">新增</a></h2>
                </div>
                <div>
                    <table class="table table-hover">
                        <colgroup>
                            <col width="20%" />
                            <col width="30%" />
                            <col width="20%" />
                            <col width="10%" />
                            <col width="10%" />
                            <col width="10%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>评论数</th>
                                <th>标题</th>
                                <th>缩略名</th>
                                <th>作者</th>
                                <th>状态</th>
                                <th>日期</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td style="padding:0;height:0;line-height:0;border:none" colspan="6"></td>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% contents.forEach(function(content){ %>  
                            <tr>
                                <td><span class="badge badge-info"><%-content.commentsNum%></span>
                                </td>
                                <td>
                                    <a href="/admin/write_post/<%-content.cid%>"><%-content.title%></a>
                                    <a href="/page/<%-content.slug%>" title="浏览 关于" target="_blank"><i class="icon-globe"></i></a>
                                </td>
                                <td><%-content.slug%></td>
                                <td><%-content.name%></td>
                                <td><%-content.status%></td>
                                <td><%-content.created%></td>
                            </tr>
                            <% }) %>  
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% include inc/admin_footer.html %>
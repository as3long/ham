<% include inc/admin_header.html %>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div>
                    <h2>管理文件</h2>
                </div>
                <div>
                    <table class="table table-hover">
                        <colgroup>
                            <col width="40%" />
                            <col width="20%" />
                            <col width="20%" />
                            <col width="20%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>文件名</th>
                                <th>上传者id</th>
                                <th>文章id</th>
                                <th>发布日期</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% medias.forEach(function(media){ %>  
                            <tr>
                                <td>
                                    <a href="/admin/media/<%-media.mid%>"><%-media.name%></a>
                                </td>
                                <td><%-media.uid%></td>
                                <td><%-media.cid%></td>
                                <td><%-getDate(media.created)%></td>
                            </tr>
                            <% }) %>  
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% include inc/admin_footer.html %>
<% include inc/admin_header.html %>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div>
                    <h2>管理分类<a href="/admin/category">新增</a></h2>
                </div>
                <div>
                    <table class="table table-hover">
                        <colgroup>
                            <col width="40%" />
                            <col width="40%" />
                            <col width="20%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>缩略名</th>
                                <th>文章数</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(function(category){ %>  
                            <tr>
                                <td>
                                    <a href="/admin/category/<%-category.mid%>"><%-category.name%></a>
                                </td>
                                <td><%-category.slug%></td>
                                <td><span class="badge badge-info"><%-category.count%></span></td>
                            <% }) %>  
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% include inc/admin_footer.html %>